{
    // ENVIRONMENTS
    "browser": true,
    "jquery": true,
    "node": true,

    // ENFORCING OPTIONS
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "indent": 4,
    "latedef": true,
    "maxlen": 80,
    "newcap": true,
    "quotmark": "single",
    "strict": true,
    "undef": true,
    "unused": true,

    // RELAXING OPTIONS
    "eqnull": true,
    "laxbreak": true,
    "laxcomma": true,

    // CUSTOM GLOBALS
    "globals": {
      "_": true,
      "Backbone": true,
      "define": true,
      "require": true
    }
}
