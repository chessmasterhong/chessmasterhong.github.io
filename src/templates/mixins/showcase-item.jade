mixin showcase-item(project, position)
    - project.title = project.title || ""
    - project.caption = project.caption || ""
    - project.thumbnail = project.thumbnail || "//placehold.it/400x400"

    div.row
        - if(position === 0)
            +showcase-item-description(project)
            +showcase-item-thumbnail(project)
        - else
            +showcase-item-thumbnail(project)
            +showcase-item-description(project)


mixin showcase-item-thumbnail(project)
    div.large-4.column
        a(href="#{project.detailsUrl}")
            img(src="#{project.thumbnail}", alt="Thumbnail for #{project.title}")


mixin showcase-item-description(project)
    div.large-8.column
        div.showcase-title
            h3
                a(href="#{project.detailsUrl}") #{project.title}

        div.showcase-text
            p #{project.caption}

            p
                - if(project.detailsUrl !== "")
                    a.button.tiny.radius(href="#{project.detailsUrl}")
                        i.fa.fa-search
                        Read more
                    | &nbsp;
                - if(project.demoUrl !== "")
                    a.button.tiny.radius(href="#{project.demoUrl}")
                        i.fa.fa-cogs
                        Live Demo
                    | &nbsp;
                - if(project.srcUrl !== "")
                    a.button.tiny.radius(href="#{project.srcUrl}")
                        i.fa.fa-code
                        Source Code
