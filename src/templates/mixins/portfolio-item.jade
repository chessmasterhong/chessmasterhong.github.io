mixin portfolio-item(project)
    - project.title = project.title || ""
    - project.caption = project.caption || ""
    - project.thumbnail = project.thumbnail || "//placehold.it/400x400"

    li.text-center
        div.portfolio-item.panel.text-center
            div.item-img-wrapper
                img(src="#{project.thumbnail}")

            div.item-caption
                h4 #{project.title}
                p #{project.caption}

                div.buttons-text.show-for-medium-up.hide-for-small-only
                    - if(project.detailsUrl !== "")
                        a.button.tiny.radius(href="#{project.detailsUrl}") Read more
                        | &nbsp;
                    - if(project.demoUrl !== "")
                        a.button.tiny.radius(href="#{project.demoUrl}") Live Demo
                        | &nbsp;
                    - if(project.srcUrl !== "")
                        a.button.tiny.radius(href="#{project.srcUrl}") Source Code

                div.buttons-icon.show-for-small-only.hide-for-medium-up
                    - if(project.detailsUrl !== "")
                        a.button.tiny.radius(href="#", title="Read more")
                            i.fa.fa-search
                        | &nbsp;
                    - if(project.demoUrl !== "")
                        a.button.tiny.radius(href="#{project.demoUrl}", title="Live Demo")
                            i.fa.fa-cogs
                        | &nbsp;
                    - if(project.srcUrl !== "")
                        a.button.tiny.radius(href="#{project.srcUrl}", title="Source Code")
                            i.fa.fa-code
