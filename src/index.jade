    body
        // Header
        header.header
            // Header: Logo
            section.logo
                div.row
                    div.large-12.column.title
                        Kevin Chan

            // Header: Navigation
            nav.nav
                div.row
                    div.large-12.column
                        a(href="#about") About
                        a(href="#showcase") showcase
                        a(href="#portfolio") portfolio
                        a(href="#contact") contact

            // Header: Banner
            section.banner
                div.row
                    div.large-12.column
                        h1 Blah blah blah

        // Main Content
        main.main
            // Main Content: About
            section#about
                div.row
                    div.large-12.medium-12.column
                        h2.section-title About Me
                        p Hello World!

            // Main Content: Showcase
            section#showcase
                div.row
                    div.large-12.medium-12.column
                        h2.section-title Showcase
                        p Showcase

            // Main Content: Portfolio
            section#portfolio
                div.row
                    div.large-12.medium-12.column
                        h2.section-title Portfolio
                        ul#portfolio-items.large-block-grid-3.medium-block.grid-2.portfolio-items

            // Main Content: Contact
            section#contact
                div.row
                    div.large-12.medium-12.column
                        h2.section-title Contact
                        ul.social-links
                            li
                                a(href="//github.com/chessmasterhong")
                                    i.fa.fa-github
                            li
                                a(href="//bitbucket.org/chessmasterhong")
                                    i.fa.fa-bitbucket
                            li
                                a(href="//www.linkedin.com/in/kchan12")
                                    i.fa.fa-linkedin

        // Footer
        footer.footer
            div.row
                div.large-12.column
                    p Copyright &copy; 2015 Kevin Chan

